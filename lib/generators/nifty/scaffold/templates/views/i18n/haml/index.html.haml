- title t(:'titles.<%= plural_name %>', :scope => :<%= plural_name %>)

%table
  %tr
    <%- for attribute in model_attributes -%>
    %th <%= attribute.human_name %>
    <%- end -%>
  - for <%= instance_name %> in @<%= instances_name %>
    %tr
      <%- for attribute in model_attributes -%>
      %td= <%= instance_name %>.<%= attribute.name %>
      <%- end -%>
      <%- if action? :show -%>
      %td= link_to t(:'actions.show', :scope => :<%= plural_name %>), <%= item_path %>
      <%- end -%>
      <%- if action? :edit -%>
      %td= link_to t(:'actions.edit', :scope => :<%= plural_name %>), <%= item_path :action => :edit %>
      <%- end -%>
      <%- if action? :destroy -%>
      %td= link_to t(:'actions.destroy', :scope => :<%= plural_name %>), <%= item_path %>, :confirm => 'Are you sure?', :method => :delete
      <%- end -%>

<%- if actions? :new -%>
%p= link_to t(:'actions.new', :scope => :<%= plural_name %>), <%= item_path :action => :new %>
<%- end -%>
